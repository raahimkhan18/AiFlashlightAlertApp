<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3000000"> <!-- translucent dark overlay -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/dimmer_bg"
        android:padding="24dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_flashlight"
            android:layout_marginBottom="8dp"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/torchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Torch: on"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <SeekBar
            android:id="@+id/brightnessSeek"
            android:layout_width="40dp"
            android:layout_height="220dp"
            android:max="100"
            android:rotation="270"
            android:progress="100"
            android:progressTint="#FF00FF"
            android:thumbTint="#FFFFFF"/>
    </LinearLayout>
</RelativeLayout>
